<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>User List</title>
    <script>
        function confirmDelete(name, id) {
            if(confirm(`Are you sure you want to delete ${name}?`)) {
                window.location.href = `/delete/${id}`;
            }
        }
    </script>
</head>
<body>
    <h1>Users</h1>
    <table border="1" cellpadding="10">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Action</th>
        </tr>
        <% users.forEach(user => { %>
            <tr>
                <td><%= user.id %></td>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td>
                    <button onclick="confirmDelete('<%= user.name %>', <%= user.id %>)">Delete</button>
                </td>
            </tr>
        <% }) %>
    </table>
</body>
</html>
